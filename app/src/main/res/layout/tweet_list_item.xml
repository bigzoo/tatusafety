<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/tweetUserText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="10dp"
                android:text="Twitter User"
                android:textColor="#000"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:src="@drawable/ic_action_twitter"
             android:layout_toRightOf="@+id/tweetUserText"
               android:layout_marginTop="10dp"
               android:paddingLeft="50dp"/>

    <TextView
        android:id="@+id/tweetUserTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="10dp"
        android:text="Twitter User"
        android:textColor="#000"
        android:textSize="14sp"
        android:textStyle="italic"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/tweetTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tweetUserTextView"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:padding="0dp"
        android:text="Tweet"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="italic" />


    <View
        android:id="@+id/seperator"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#9EA3B0"
        android:layout_below="@id/tweetTextView"/>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>