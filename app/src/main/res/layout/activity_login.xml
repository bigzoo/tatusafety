<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/view_root"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.chris.tatusafety.LoginActivity"
    android:background="@drawable/bg_wave">


<ImageView
    android:id="@+id/background"
    android:layout_width="0dp"
    android:layout_height="0dp" />

<TextView
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/app_name"
    android:textColor="@android:color/white"
    android:textSize="22sp"
    android:textAllCaps="true"
    android:textAlignment="center"
    android:drawableTop="@drawable/logo_surf_connect"
    android:drawablePadding="30dp"
    android:layout_marginTop="90dp"
    />
    <Button
        android:id="@+id/email_login_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Proceed with Email"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:textColor="@android:color/white"
        android:background="@drawable/login_button_selector"
        android:textSize="16sp"
        android:textAlignment="center"
        android:onClick="onEmailLogin"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="300dp"
        />

<Button
    android:id="@+id/phone_login_button"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:text="Proceed with phone number"
    style="@style/Base.Widget.AppCompat.Button.Borderless"
    android:textColor="@android:color/white"
    android:background="@drawable/login_button_selector"
    android:textSize="16sp"
    android:textAlignment="center"
    android:onClick="onPhoneLogin"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="370dp" />



    <Button
        android:id="@+id/anonymous_login_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Proceed anonymously"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:textColor="@android:color/white"
        android:background="@drawable/login_button_selector"
        android:textSize="16sp"
        android:textAlignment="center"
        android:onClick="onAnonymousLogin"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="440dp"/>

</RelativeLayout>