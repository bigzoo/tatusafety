<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/view_root"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.chris.tatusafety.UI.LoginActivity"
    android:background="@drawable/side_nav_bar">


<ImageView
    android:id="@+id/background"
    android:layout_width="0dp"
    android:layout_height="0dp" />

<TextView
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/app_name"
    android:textColor="@android:color/black"
    android:textSize="22sp"
    android:textAllCaps="true"
    android:textAlignment="center"
    android:drawableTop="@drawable/logo_surf_connect"
    android:drawablePadding="30dp"
    android:layout_marginTop="90dp"
    />
    <Button
        android:id="@+id/email_login_button"

        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:textAlignment="center"
        android:onClick="onEmailLogin"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="270dp"
        android:text="Login with email"
        android:textColor="#ffff"
        android:textSize="16sp"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        />

<Button
    android:id="@+id/phone_login_button"
    android:text="login with phone"
    style="@style/Base.Widget.AppCompat.Button.Borderless"
    android:textAlignment="center"
    android:onClick="onPhoneLogin"
    android:layout_marginLeft="45dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="350dp"
    android:textColor="#ffff"
    android:textSize="16sp"
    android:layout_width="270dp"
    android:layout_height="60dp"
    android:background="@drawable/buttonshape"
    android:shadowColor="#A8A8A8"
    android:shadowDx="0"
    android:shadowDy="0"
    android:shadowRadius="5"/>



    <Button
        android:id="@+id/anonymous_login_button"
        android:text="login anonymously"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:textAlignment="center"
        android:onClick="onAnonymousLogin"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="430dp"
        android:textColor="#ffff"
        android:textSize="16sp"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"/>

</RelativeLayout>